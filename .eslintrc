{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "no-console": ["off"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "named": "never",
      "anonymous": "never",
      "asyncArrow": "always"
    }]
  }
}